{
    "name": "tzbtc-mint-burn-events",
    "description": "Off-chain events for https://github.com/tz-wrapped/tezos-btc",
    "version": "0.5.0",
    "license": {"name": "MIT", "details": "The MIT License"},
    "interfaces": ["TZIP-7", "TZIP-16", "TZIP-20"],
    "views": [
        {
            "name": "getChangedTokenBalances",
            "description": "Get token balance updates",
            "pure": "true",
            "implementations": [
                {
                    "michelson-parameter-view": {
                        "parameter": {"prim": "or", "args": [{"prim": "pair", "annots": ["%mint"], "args": [{"prim": "address"}, {"prim": "nat"}]}, {"prim": "nat", "annots": ["%burn"]}]},
                        "return-type": {"prim": "map", "args": [{"prim": "address"}, {"prim": "int"}]},
                        "code": [
                            {"prim": "DUP"},
                            {"prim": "CDR"},
                            {"prim": "SWAP"},
                            {"prim": "CAR"},
                            {
                                "prim": "IF_LEFT",
                                "args": [
                                    [{"prim": "DUP"}, {"prim": "CDR"}, {"prim": "INT"}, {"prim": "SOME"}, {"prim": "SWAP"}, {"prim": "CAR"}],
                                    [{"prim": "INT"}, {"prim": "NEG"}, {"prim": "SOME"}, {"prim": "SENDER"}]
                                ]
                            },
                            {"prim": "UPDATE"},
                            {"prim": "NIL", "args": [{"prim": "operation"}]},
                            {"prim": "PAIR"}
                        ],
                        "entrypoints": ["mint", "burn"]
                    }
                }
            ]
        }
    ]
}